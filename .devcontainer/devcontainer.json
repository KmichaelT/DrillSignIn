{
  "name": "Expo Managed Workflow",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "node": {
      "version": "20" // Use Node.js 18+ for Expo compatibility
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["expo.vscode-expo-tools"]
    }
  },
  "forwardPorts": [19000, 19001, 19002], // Expo dev server ports
  "postCreateCommand": "npm install -g expo-cli && expo init . --template blank"
}
