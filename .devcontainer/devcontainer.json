{
  "name": "Expo Managed Workflow",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "node": {
      "version": "20" // Node.js 18+ required for Expo
    }
  },
  "forwardPorts": [19000, 19001, 19002], // Expo dev server ports
  "postCreateCommand": "npx create-expo-app . --template blank && npm install"
}
